@model IssueUpdateVM


<div class="row">
    <div class="col-md-12">
        <form id="update-issue-form" method="post" hx-post="/issue/update/@Model.Id" hx-target="#update-issue-content">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label hidden asp-for="Id"></label>
                <input hidden asp-for="Id" value="@Model.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Title">Title:</label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StatusId">Status:</label>
                <select asp-for="StatusId" class="form-select">
                    @foreach (var status in ViewData["Statuses"] as IEnumerable<StatusGetVM>)
                    {
                        if (status.Id == Model.StatusId)
                        {
                            <option selected value="@status.Id">@status.Name</option>
                        }
                        else
                        {
                            <option value="@status.Id">@status.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PlannedDateTime">Planned complete:</label>
                <input type="datetime-local" asp-for="PlannedDateTime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FactedTimeSpan">Planned work hours</label>
                <input type="number" step="0.1" asp-for="FactedTimeSpan" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
        </form>
    </div>
</div>
